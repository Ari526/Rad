<div class="modal fade" id="new-answer-modal" tabindex="-1" >
   <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             <h4 class="modal-title">New Answer</h4>
            </div>
              <%= form_for :answer, url: '/answers', html: { class: 'form-horizontal'} do %>
              <input type="hidden" name="answer[question_id]" value="<%= @question.id %>">
                <div class="modal-body">
               
                  <div class="form-group">
                    <label for="inputEmail1" class="col-sm-2 control-label">Email address</label>
                    <div class="col-sm-10">
                       <input type="email" name="answer[email]" value="<%= current_user_email %>" class="form-control" id="inputEmail1" placeholder="Email" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputAnswer" class="col-sm-2 control-label">Answer</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" name="answer[body]" id="inputQuestion" placeholder="What would you like to know" required></textarea>
                    </div>
                  </div>
                 
                </div>
            
            
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
               <% end %>   
              </form>
      </div>
   </div>
</div>